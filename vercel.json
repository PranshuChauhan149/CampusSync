{
  "version": 2,
  "name": "campussync",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    },
    {
      "src": "server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/index.js"
    },
    {
      "src": "/assets/(?<path>.*)",
      "dest": "client/dist/assets/$path"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html",
      "status": 200
    }
  ]
}
